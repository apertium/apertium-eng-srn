    <rule comment="RULE: chunk verbs">
          <pattern>
        <pattern-item n="aux"/>
        <pattern-item n="verb"/>
      </pattern>
      <action>  
          <call-macro n="verb_tensing">
            <with-param pos="1"/>
          </call-macro>
        <out>
        <chunk name="aux.verb">
       <tags>
         <tag><lit-tag v="SV"/></tag>
           <tag><var n="verb_tense"/></tag>
       </tags>
          <lu>
            <clip pos="2" side="tl" part="lem"/>
            <clip pos="2" side="tl" part="word_type"/>
            <clip pos="2" side="tl" part="word_type_2"/>
           <var n="verb_tense"/>
                <lit-tag v="3"/>
            <lit-tag v="4"/>
          </lu>
            </chunk>
        </out>
      </action>
    </rule>
      
    <rule comment="RULE: chunk verbs">
          <pattern>
        <pattern-item n="vbmod"/>
        <pattern-item n="verb"/>
      </pattern>
      <action>  
        <out>
        <chunk name="vbmod.verb">
       <tags>
         <tag><lit-tag v="SV"/></tag>
           <tag><lit-tag v="pres"/></tag>
       </tags>
          <lu>
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="word_type"/>
            <clip pos="1" side="tl" part="word_type_2"/>
           <lit-tag v="pres"/>
                <lit-tag v="3"/>
            <lit-tag v="4"/>
          </lu>
            <b/>
          <lu>
            <clip pos="2" side="tl" part="lem"/>
            <clip pos="2" side="tl" part="word_type"/>
            <clip pos="2" side="tl" part="word_type_2"/>
           <lit-tag v="inf"/>
          </lu>
            </chunk>
        </out>
      </action>
    </rule>
            

    <rule comment="RULE: chunk nouns">
          <pattern>
        <pattern-item n="nom"/>
      </pattern>
      <action>  
        <out>
        <chunk name="n">
       <tags>
         <tag><lit-tag v="SN"/></tag> 

           <tag><lit-tag v="p3"/></tag>
           <tag><lit-tag v="sg"/></tag>
       </tags>
          <lu>
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="word_type"/>
            <clip pos="1" side="tl" part="word_type_2"/>
           <lit-tag v="sg"/>

          </lu>
            </chunk>
        </out>
      </action>
    </rule>
      

    <rule comment="RULE: chunk verbs">
          <pattern>
        <pattern-item n="verb"/>
      </pattern>
      <action>  
        <out>
        <chunk name="n">
       <tags>
         <tag><lit-tag v="SV"/></tag>
           <tag><lit-tag v="pres"/></tag>
            </tags>
          <lu>
            <clip pos="1" side="tl" part="lem"/>
            <clip pos="1" side="tl" part="word_type"/>
            <clip pos="1" side="tl" part="word_type_2"/>
           <lit-tag v="pres"/>
                <lit-tag v="3"/>
            <lit-tag v="4"/>
              
          </lu>
            </chunk>
        </out>
      </action>
    </rule>
      

      

  </section-rules>
</transfer>

